@inject Microsoft.Extensions.Options.IOptions<SharpBlogX.Options.BlogOptions> BlogOptions

<FooterView Copyright="@($"{DateTime.Now.Year} {BlogOptions.Value.Title}⭐⭐⭐")" Links="Links" />

@code
{
    LinkItem[] Links { get; set; } =
    {
        new LinkItem
        {
            Key = "github",
            Title = (RenderFragment)(@<Icon Type="github" />),
            Href = "https://github.com/cnsimo/sharpblogx",
            BlankTarget = true,
        }
    };
}